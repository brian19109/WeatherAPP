    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_weather_condition_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_current_location_weather_condition_icon_now"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_01"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/tv_current_location_weather_condition_text_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴時多雲"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_current_location_weather_condition_icon_now"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_current_location_precipitation_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_current_location_weather_condition_text_now">

            <ImageView
                android:id="@+id/iv_current_location_precipitation_icon_now"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_precipitation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraintLayout_current_location_precipitation_now"></ImageView>

            <TextView
                android:id="@+id/tv_current_location_precipitation_text_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="10%"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/iv_current_location_precipitation_icon_now"
                app:layout_constraintTop_toTopOf="@id/constraintLayout_current_location_precipitation_now"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_current_location_weather_condition_temperatures_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout_current_location_precipitation_now">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_current_location_temperature_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraintLayout_current_location_weather_condition_temperatures_now"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:id="@+id/tv_current_location_temperature_title_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="溫度"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayout_current_location_temperature_now"></TextView>

